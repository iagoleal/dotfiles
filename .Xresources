! Nice font options: Hack, Source Code Pro, Fantasque, Inconsolata

! Color definitions
#define BG #0f1419
#define FG #ffffea

! Cursor configuration
Xcursor.theme: Vimix-cursors
Xcursor.size: 32

dmenu.font: Source Code Pro:style:Semibold:size=14:antialias=true:hinting=false
dmenu.background: BG
dmenu.foreground: FG
dmenu.selbackground: #56bb78
dmenu.selforeground: BG

!! Xterm config
xterm*termName: xterm-256color
xterm*faceName: xft:mononoki::antialias=true:hinting=false
xterm*faceSize: 15
xterm*renderFont: true
xterm*locale: true
! allows alt+key to be used for commands
xterm*metaSendsEscape:  true
! Fix backspace escape code
xterm*vt100.backarrowKey: false
xterm*ttyModes: erase ^?
! Clipboard
xterm*VT100.Translations: #override \
                 Ctrl Shift <Key>V:    insert-selection(CLIPBOARD) \n\
                 Ctrl Shift <Key>C:    copy-selection(CLIPBOARD)

! special
/* *.foreground:   #e9e0d3 */
/* *.background:   #1a221a */
*.cursorColor:  #e9e0d3
*.foreground:   #c0caf5
*.background:   #24283b
