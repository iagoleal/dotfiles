! Nice font options: Hack, Source Code Pro, Fantasque, Inconsolata

! Color definitions
#define BG #0f1419
#define FG #ffffea

! Cursor configuration
Xcursor.theme: Vimix-cursors
Xcursor.size: 32

dmenu.font: mononoki:style:Semibold:size=14:antialias=false:hinting=false
dmenu.background: BG
dmenu.foreground: FG
dmenu.selbackground: #56bb78
dmenu.selforeground: BG

!! Xterm config
xterm*termName: xterm-256color
xterm*faceName: xft:mononoki::antialias=false:hinting=false
xterm*faceSize: 15
xterm*renderFont: true
xterm*locale: true
! allows alt+key to be used for commands
xterm*metaSendsEscape:  true
! Fix backspace escape code
xterm*VT100.backarrowKey: false
xterm*ttyModes: erase ^?
! Save more lines on scrollback
xterm.VT100.saveLines: 4096
! Smooth scroll
xterm.VT100.jumpScroll: true
xterm.VT100.fastScroll: false
xterm.VT100.multiScroll: true
! Clipboard
xterm.VT100.Translations: #override \
                 Ctrl Shift <Key>V:    insert-selection(CLIPBOARD) \n\
                 Ctrl Shift <Key>C:    copy-selection(CLIPBOARD)


!! Let it be colorful

! special
*.background:   #2f383e
*.foreground:   #d3c6aa
*.cursorColor:  #d3c6aa
! black
*.color0:       #4a555b
*.color8:       #4a555b
! red
*.color1:       #e67e80
*.color9:       #e67e80
! green
*.color2:       #a7c080
*.color10:      #a7c080
! yellow
*.color3:       #dbbc7f
*.color11:      #dbbc7f
! blue
*.color4:       #7fbbb3
*.color12:      #7fbbb3
! magenta
*.color5:       #d699b6
*.color13:      #d699b6
! cyan
*.color6:       #83c092
*.color14:      #83c092
! white
*.color7:       #d3c6aa
*.color15:      #d3c6aa

TopMenu*background:     #252f34
BottomMenu*background:  #252f34
FloatMenu*background:   #252f34
