[alias]
	tree = log --graph --all --decorate --pretty=oneline --abbrev-commit
	undo = reset HEAD^
[core]
	editor = nvim
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
[mergetool]
	prompt = true
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
