#!/bin/bash

# -s : argument is script name
# -l : location of notification on screen
# If given, pipes result of script instead of plain text

direction='northeast'
while getopts sl: flag; do
    case $flag in
        s)
            sflag=true
            ;;
        d)
            direction="${OPTARG}"
            ;;
    esac
done
# Remove flag arguments
shift $((OPTIND-1))

# Remove notifications daemon
pkill dunst

if [[ "$sflag" ]]; then
    notify-send "$($@)"
else
    notify-send "$@"
fi
